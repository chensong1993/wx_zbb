<wxs src="../data.wxs" module="unit_conversion">
</wxs>

<view class='data-main'>
  <block wx:for="{{industry}}" wx:key>
    <view class='hangye-category'>
      <view>
        <text class='hangye-title'>{{item.indu_name_2}}</text>
        <text class='hangye-num'>{{item.total_company}}</text>
      </view>

      <view class='left-content'>
        <text class='left-content1'>股本：</text>
        <text class='left-content2'>{{unit_conversion.stockValue(item.total_shares)}}</text>
      </view>
      <view class='right-content'>
        <text class='right-content1'>总资产：</text>
        <text class='right-content2'>{{unit_conversion.stockValue(item.total_value)}}</text>
      </view>


      <view class='left-content'>
        <text class='left-content1'>营收：</text>
        <text class='left-content2'>{{unit_conversion.stockValue(item.total_incomes)}}</text>
      </view>
      <view class='right-content'>
        <text class='right-content1'>营收同比增长：</text>
        <text class='right-content2'>{{unit_conversion.percentValue(item.income_change)}}</text>
      </view>



      <view class='left-content'>
        <text class='left-content1'>净利润：</text>
        <text class='left-content2'>{{unit_conversion.stockValue(item.total_profit)}}</text>
      </view>

      <view class='right-content'>
        <text class='right-content1'>净利润同比增长：</text>
        <text class='right-content2'>{{unit_conversion.percentValue(item.profit_change)}}</text>
      </view>

    </view>
  </block>


</view>