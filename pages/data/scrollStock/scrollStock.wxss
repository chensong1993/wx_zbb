@import "../../loading_more/loading_more.wxss";
.main {
  font-size: 24rpx;
}

.swiper-main {
  height: 100%;
  width: 150rpx;
  float: left;
}

.swiper-main1 {
  height: 100%;
  width: 80%;
  box-sizing: border-box;
  overflow: hidden;
  background: white;
  white-space: nowrap;
}

.stockLeftTitle {
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #ececec;
  width: 150rpx;
  text-align: center;
  font-weight: bold;
  font-size: 28rpx;
}

.name {
  padding-top: 10rpx;
  height: 25rpx;
}

.stock {
  padding-top: 5rpx;
  height: 25rpx;
}

.stockLeft {
  width: 150rpx;
  height: 85rpx;
  text-align: center;
  display: inline-block;
  border-bottom: 1rpx solid #ececec;
}

.stockTitle {
  font-size: 28rpx;
  line-height: 80rpx;
  height: 80rpx;
  width: 130rpx;
  text-align: center;
  font-weight: bold;
  display: inline-block;
  border-bottom: 1rpx solid #ececec;
}
.stockTitle.active{
  color: red;
}
.stockTitle.activeG{
  color: #5AB963;
}
.stockRightContent {
  width: 130rpx;
  height: 85rpx;
  display: inline-block;
  line-height: 85rpx;
  text-align: center;
  border-bottom: 1rpx solid #ececec;
}

.stockRightContent .name {
}

.loadMores{
  font-size: 30rpx;
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  display: block;
}
