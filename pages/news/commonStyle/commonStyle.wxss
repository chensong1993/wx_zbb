::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.views {
  font-size: 28rpx;
  clear: both;
  overflow: hidden;
  position: relative;
  margin-left: 20rpx;
  border-bottom: 1rpx gainsboro solid;
}
.views:active{
  background:rgb(224, 224, 224);
}
.mainContent {
  float: left;
  width: 55%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

.mainImg {
  float: right;
  width: 250rpx;
  height: 200rpx;
}

.title {
  height: auto;
  width: auto;
}

.newsType {
  height: auto;
  width: auto;
  display: block;
  position: absolute;
  bottom: 20rpx;
  left: 10rpx;
  margin-right: 50rpx;
  color: #4093ff;
}

.publish {
  size: 18rpx;
  position: absolute;
  bottom: 20rpx;
  left: 90rpx;
}

.newsImg {
  margin: 20rpx 0;
  width: 230rpx;
  height: 160rpx;
  border-radius: 5rpx;
}


