@import "/wxParse/wxParse.wxss";
.main{
margin: 0rpx 20rpx  0rpx 20rpx;
}

.newsTitle{
  font-size: 40rpx;
}

.titlebar{
  font-size: 30rpx;
  line-height: 100rpx;
}
.type{
  border: 1rpx solid;
  border-radius: 15rpx;
  border-color: gainsboro;
  padding-left: 5rpx;
  padding-right: 5rpx;
  margin-right: 10rpx;
  color: rgb(148, 147, 147);
}

.corporation{
  color: #4093ff;
  margin-right: 10rpx;
}

.date{
  margin-left: 10rpx;
margin-right: 10rpx;
}

.author{
  margin-left: 10rpx;
}

.briefContent{
   font-size: 30rpx;
}
.fengex{
  text-align: center;
  font-size: 30rpx;
  margin-bottom: 30rpx;
  
}

.wxParse{
  margin-bottom: 30rpx;
  margin-left:0rpx;
  margin-right: 0rpx; 
}

.newsTags{
  display: inline-block;
  padding: 3rpx 2rpx;
  margin-right: 20rpx;
  border: 3rpx #4093ff solid;
  border-radius: 15rpx;
  font-size: 30rpx;
}
/* //新闻列表 */
.views {
  font-size: 24rpx;
  clear: both;
  overflow: hidden;
  position: relative;
  border-bottom: 12rpx gainsboro solid;
}

.mainContent {
  float: left;
  width: 55%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

.mainImg {
  float: right;
}

.title {
  height: auto;
  width: auto;
}

.newsType {
  height: auto;
  width: auto;
  display: block;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  margin-right: 50rpx;
  color: #4093ff;
}

.publish {
  size: 18rpx;
  position: absolute;
  bottom: 20rpx;
  left: 90rpx;
}

.newsImg {
  width: 300rpx;
  height: 200rpx;
  float: right;
  position: relative;
}

.selectNews{
  margin-top: 30rpx;
  padding: 30rpx 0;
  border-top: 12rpx gainsboro solid;
  text-align: center;
  font-size: 30rpx
}