canvas {
  position: fixed;
  top: 0;
  left: 9999px;
}
.opacity{
 width: 100%;
  height: 100%;
    filter: alpha(Opacity=80);
  -moz-opacity: 0.5;
  opacity: 0.5;
  background: black;
  position: fixed;
  top: 0;
  z-index: 1; 
}

.preview {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 2;
}

.preview .news_photo {
  width: 70%;
  position: absolute;
  top: 10%;
  left: 15%;
  z-index: 3;
  background: white;
  border-radius: 15rpx;
}

.close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 7%;
  z-index: 33;
  right: 10%;
}

.preview button {
  width: 40%;
  position: absolute;
  top: 78%;
  left: 30%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: white;
  z-index: 2;
  background: #4675f9;
}

.share_view {
  border-top: 1rpx gainsboro solid;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  height: 90rpx;
  width: 100%;
  line-height: 90rpx;
  background: white;
}

